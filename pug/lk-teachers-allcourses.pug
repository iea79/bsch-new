extends layout/lk.pug

block variables
    - lkPage = 'Управление курсами';
    - isLogin = true;

block lkcontent



    .lkTeachersAllCourses
        .lkContent__title Управление курсами
        .lkTeachersAllCourses__btnBox
            button.btn.btn_sm.lkTeachers__btn(data-toggle="modal" data-target="#courseAdd") Добавить курс



        .lkTeachersAllCourses__content

            .list
                - arr = [{img: 'recommend-1.jpg', time: '16 часов', listener: '3051 слушатель', name: 'От mvp до pitchdeck: инновационное мышление в бизнес-процессах' }, {img: 'recommend-3.jpg', time: '16 часов', listener: '1892 слушателя', name: 'Стратегическое мышление для бизнеса  и жизни' }, {img: 'recommend-5.jpg', time: '15 часов', listener: '1892 слушателя', name: 'Критическое мышление в управлении  и предпринимательстве' }, {img: 'recommend-2.jpg', time: '15 часов', listener: '1892 слушателя', name: 'Бизнес психология' }, {img: 'recommend-3.jpg', time: '16 часов', listener: '1892 слушателя', name: 'Стратегическое мышление для бизнеса  и жизни' }, {img: 'recommend-1.jpg', time: '16 часов', listener: '3051 слушатель', name: 'От mvp до pitchdeck: инновационное мышление в бизнес-процессах' },]
                each item in arr

                    .lkRecommend__plate.lkTeachersAllCourses__plate
                        .lkRecommend__item
                            .lkRecommend__left(style="background: url('img/"+item.img+"') no-repeat")
                            .lkRecommend__right.lkTeachersAllCourses__right
                                .lkRecommend__timeBox.lkRecommend__timeBox-lkTeachers
                                    .lkRecommend__timeBox-left
                                        img.time__icon(src="img/time.svg", alt="")
                                        span.lkRecommend__time= item.time
                                    .lkRecommend__timeBox-right
                                        img.time__icon(src="img/listener.svg", alt="")
                                        span.lkRecommend__time= item.listener
                                a.lkRecommend__title(href="#")= item.name
                                .lkTeachersAllCourses__action
                                    button.btn.btn_primary.lkTeachersAllCourses__btn(data-toggle="modal" data-target="#courseEditRequest") Редактировать
                                    .lkTeachersAllCourses__deleteBox(data-toggle="modal" data-target="#courseDelete")
                                        img(src="img/delete.svg", alt="")
                                        a.lkTeachersAllCourses__deleteText(href="#") Удалить

        .pagination
            .pagination__content
                a.arrow(href="#")
                    img(src="img/prev.svg", alt="")
                ul
                    li
                        a(href="#") 1
                    li
                        a.active(href="#") 2
                    li
                        a(href="#") 3
                    li
                        a.dots(href="#") ...
                    li
                        a(href="#") 11
                a.arrow(href="#")
                    img(src="img/next.svg", alt="")

    // Begin Modal courseAdd
    .modal.fade#courseAdd
        .modal-dialog
            a(href="#" class="modal-close" data-dismiss="modal")
            .form__wrapper
                form
                    .form__legend Запрос на добавление курса
                    .form__row
                        input(type="text", placeholder="Название курса")
                    .form__row
                        textarea(placeholder="Описание курса")
                    .form__row
                        textarea(placeholder="Предположительные темы курса")
                    .form__action
                        button.btn.btn_primary(type="submit") Отправить заявку
                    .form__privacy *Заполнять курс можно будет после проверки модератором
    // End modal courseAdd

    // Begin Modal courseDelete
    .modal.fade.modalNotice#courseDelete
        .modal-dialog
            .modal-content
                a(href="#" class="modal-close" data-dismiss="modal")
                .modal-title Удаление курса
                .modalNotice__text Данный курс удалится после проверки модератором
                .modalNotice__action
                    button.btn.btn_primary(data-dismiss="modal") Понятно

    // End modal courseDelete

    // Begin Modal courseDeleteted
    // Открывать через $('#courseDeleteted').modal('show');
    .modal.fade.modalNotice#courseDeleteted
        .modal-dialog
            .modal-content
                a(href="#" class="modal-close" data-dismiss="modal")
                .modal-title Ваш курс удален
                .modalNotice__text Курс полностью удален с нашего ресурса
                .modalNotice__action
                    button.btn.btn_primary(data-dismiss="modal") Понятно

    // End modal courseDeleteted

    // Begin Modal courseEditRequest
    .modal.fade.modalNotice.modalNotice_lg#courseEditRequest
        .modal-dialog
            .modal-content
                a(href="#" class="modal-close" data-dismiss="modal")
                .modal-title Отправить запрос  на редактирование курса «От mvp  до pitchdeck: инновационное мышление в бизнес-процессах»? 
                .modalNotice__action
                    // Атрибуты для открытия следующей модалки. Удалить при ненадобности
                    button.btn.btn_primary(data-dismiss="modal" data-toggle="modal" data-target="#courseEdited") Да, отправить заявку
                    button.btn.btn_link(data-dismiss="modal") Нет, не отправлять
                .modalNotice__text.muted *Редактировать курс можно будет после проверки модератором

    // End modal courseEditRequest

    // Begin Modal courseEdited
    // Открывать можно через $('#courseEdited').modal('show');
    .modal.fade.modalNotice#courseEdited
        .modal-dialog
            .modal-content
                a(href="#" class="modal-close" data-dismiss="modal")
                .modal-title Редактирование курса
                .modalNotice__text Редактировать курс можно будет после проверки модератором
                .modalNotice__action
                    button.btn.btn_primary(data-dismiss="modal") Понятно

    // End modal courseEdited

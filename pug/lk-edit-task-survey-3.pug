extends layout/lk.pug

block variables
    - lkPage = '';
    - isLogin = true;
    - isCourse = false;
    - asideHide = true;
    - navHide = true;
block lkcontent
    .lkContent__title Редактирование задания: Опрос

    .lkCoursTask__title Редактирование задания: Опрос
    .lkTaskSurvey
        .lkTaskSurvey__top
            a.lkTaskSurvey__link-top(href="#", target="_blank") Просмотр
            a.lkTaskSurvey__link-top.active(href="#", target="_blank") Редактировать вопросы
        .lkCollapse(data-collapse-wrapper="")
            .lkCollapse__title.open(data-collapse="") Множественный выбор
            .lkCollapse__body.open(data-collapse-body="")
                .form
                    .form__row.form__row_inline
                        .form__check
                            input(type="checkbox")
                            .form__checkText Обязательный

                    .form__row.form__row_inline
                        .form__label Вопрос
                        .form__field
                            input(type="text", placeholder="Введите вопрос")

                    .form__row.form__row_inline
                        .form__label Метка
                        .form__field
                            input(type="text", placeholder="Введите текст")

                    .form__row.form__row_inline
                        .form__label Тип множественного выбора
                        .form__field
                            .grid
                                .col.col_100
                                    +select('Множественный выбор с одним ответом')

                    .form__row.form__row_inline
                        .form__label Расположение
                        .form__field
                            .grid
                                .col.col_50
                                    +select('Вертикально')

                    .form__row.form__row_inline
                        .form__label Скрыть вариант “не выбран”
                        .form__field
                            .grid
                                .col
                                    +select('Нет')

                    .form__row.form__row_inline
                        .form__label Не анализировать пустые ответы
                        .form__field
                            .grid
                                .col
                                    +select('Нет')


                    .form__row.form__row_inline
                        .form__label Значения множественного выбора
                        .form__field
                            textarea(placeholder="Введите текст")
                            .form__label.lkTaskSurvey__text Каждый вариант ответа с новой строки!

                    .form__row.form__row_inline
                        .form__label Положение
                        .form__field
                            .grid
                                .col
                                    +select('1 ')
                    .lkCollapse__foot
                        button.btn.btn_primary Сохранить вопрос
                        button.btn.btn_link ОТМЕНА

    .lkTaskSurvey__linkBottom
        a.lkTaskSurvey__link(href="#", target="_blank") Объявления
        a.lkTaskSurvey__link(href="#", target="_blank") Вводная лекция

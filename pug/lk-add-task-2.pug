extends layout/lk.pug

block variables
    - lkPage = '';
    - isLogin = true;
    - isCourse = false;
    - asideHide = true;
    - navHide = true;

block lkcontent
    .lkContent__title Добавление задания: Задание

    .lkCoursTask__title Добавление задания: Задание

    .lkCollapse(data-collapse-wrapper="")
        .lkCollapse__title(data-collapse="") Общее
        // Добавить класс open для открытого состояния
        .lkCollapse__body(data-collapse-body="")
            .form
                .form__row
                    .form__label Название задания*
                        .icon_help(title="Системная подсказка")
                    .form__field
                        input(type="text", placeholder="Введите полное название заголовка блока")
                .form__row
                    .form__label Вступление*
                        .icon_help(title="Системная подсказка")
                    .form__field
                        textarea(placeholder="Введите текст")
                .form__row
                    .form__check
                        input(type="checkbox")
                        .form__checkText Отображать описание/вступление на странице курса
                .form__row
                    .form__label Дополнительные файлы*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        +upload()

    .lkCollapse(data-collapse-wrapper="")
        .lkCollapse__title(data-collapse="") Доступность
        .lkCollapse__body(data-collapse-body="")
            .form
                .form__row.form__row_inline
                    .form__label Разрешить отвечать с*
                        .icon_help(title="Системная подсказка")
                    .form__field
                        .form__date
                            .form__day
                                +select('', [14, 15, 16, 17], true)
                            .form__month
                                +select('', ['Сентября', 'Октября', 'Ноября'], true)
                            .form__year
                                +select('', [2021, 2022, 2023], true)
                            .form__time
                                +select('', ['15:00', '15:30', '16:00', '16:30'], true)
                            i.icon_calendar
                            .form__check
                                input(type="checkbox")
                                .form__checkText Включить

                .form__row.form__row_inline
                    .form__label Разрешить отвечать до*
                        .icon_help(title="Системная подсказка")
                    .form__field
                        .form__date
                            .form__day
                                +select('', [14, 15, 16, 17], true)
                            .form__month
                                +select('', ['Сентября', 'Октября', 'Ноября'], true)
                            .form__year
                                +select('', [2021, 2022, 2023], true)
                            .form__time
                                +select('', ['15:00', '15:30', '16:00', '16:30'], true)
                            i.icon_calendar
                            .form__check
                                input(type="checkbox")
                                .form__checkText Включить

                .form__row.form__row_inline
                    .form__label Напомнить о завершении сдачи
                        .icon_help(title="Системная подсказка")
                    .form__field
                        .form__date
                            .form__day
                                +select('', [14, 15, 16, 17], true)
                            .form__month
                                +select('', ['Сентября', 'Октября', 'Ноября'], true)
                            .form__year
                                +select('', [2021, 2022, 2023], true)
                            .form__time
                                +select('', ['15:00', '15:30', '16:00', '16:30'], true)
                            i.icon_calendar
                            .form__check
                                input(type="checkbox")
                                .form__checkText Включить

    .lkCollapse(data-collapse-wrapper="")
        .lkCollapse__title.open(data-collapse="") Типы предоставлений ответов
        .lkCollapse__body.open(data-collapse-body="")
            .form
                .form__row.form__row_inline
                    .form__label Разрешить изменение выбора*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col
                                +checkbox('Ответ в виде текста', true, true)
                            .col
                                +checkbox('Ответ в виде текста', true, false)

                .form__row.form__row_inline
                    .form__label Максимальное число файлов*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col
                                +select('', [1,2,3,4,5,6])

                .form__row.form__row_inline
                    .form__label Максимальное размер файлов*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col.col_100
                                +select('Максимальный размер загружаемого файла для уровня “сайт” (20мб)')

                .form__row.form__row_inline
                    .form__label Автоматическая нумерация вопросов*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col.col_50
                                +select('Выберите допустимые типы файлов')

    .lkCollapse(data-collapse-wrapper="")
        .lkCollapse__title.open(data-collapse="") Типы отзывов
        .lkCollapse__body.open(data-collapse-body="")
            .form
                .form__row.form__row_inline
                    .form__label Типы отзывов*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col
                                +checkbox('Отзыв в виде комментария', true, true)
                            .col
                                +checkbox('Ведомость с оценками', true, true)
                            .col
                                +checkbox('Отзыв в виде файла', true, false)

                .form__row.form__row_inline
                    .form__label Встроенный комментарий*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col
                                +select('', ['Нет', 'Да'])

    .lkCollapse(data-collapse-wrapper="")
        .lkCollapse__title.open(data-collapse="") Параметры ответов
        .lkCollapse__body.open(data-collapse-body="")
            .form
                .form__row.form__row_inline
                    .form__label Требовать нажатие кнопки ”отправить”*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col
                                +select('', ['Нет', 'Да'])

                .form__row.form__row_inline
                    .form__label Требовать, чтобы студенты принимали  условия предоставления ответов*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col
                                +select('', ['Нет', 'Да'])

                .form__row.form__row_inline
                    .form__label Дополнительные попытки*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col.col_33
                                +select('', ['Никогда', 'Нет', 'Да'])

    .lkCollapse(data-collapse-wrapper="")
        .lkCollapse__title.open(data-collapse="") Настройки предоставления работ группы
        .lkCollapse__body.open(data-collapse-body="")
            .form
                .form__row.form__row_inline
                    .form__label Групповой ответ студентов*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col
                                +select('', ['Нет', 'Да'])

    .lkCollapse(data-collapse-wrapper="")
        .lkCollapse__title.open(data-collapse="") Уведомления
        .lkCollapse__body.open(data-collapse-body="")
            .form
                .form__row.form__row_inline
                    .form__label Уведомлять преподавателей об отправке ответов*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col
                                +select('', ['Нет', 'Да'])

                .form__row.form__row_inline
                    .form__label Уведомлять преподавателей об отправке ответов после последнего срока сдачи задания*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col
                                +select('', ['Нет', 'Да'])

                .form__row.form__row_inline
                    .form__label Значение по умолчанию для «Сообщить студентам»*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col
                                +select('', ['Нет', 'Да'])

    .lkCollapse(data-collapse-wrapper="")
        .lkCollapse__title.open(data-collapse="") Оценка
        .lkCollapse__body.open(data-collapse-body="")
            .form
                .form__row.form__row_inline
                    .form__label Тип оценки*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col.col_50
                                +select('Балл')

                .form__row.form__row_inline
                    .form__label Максимальная оценка*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col.col_50
                                input(type="text", placeholder="Введите значение от 0 до 100")

                .form__row.form__row_inline
                    .form__label Категория оценки*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col.col_50
                                +select('Непосредственное оценивание')

                .form__row.form__row_inline
                    .form__label Метод оценивания*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col.col_50
                                +select('Без категории')

                .form__row.form__row_inline
                    .form__label Проходной балл*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col.col_50
                                input(type="text", placeholder="Введите балл")

                .form__row.form__row_inline
                    .form__label Оценивание в слепую*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col
                                +select('', ['Нет', 'Да'])

                .form__row.form__row_inline
                    .form__label Скрыть личность оценщика от студента*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col
                                +select('', ['Нет', 'Да'])

                .form__row.form__row_inline
                    .form__label Использовать поэтапное оценивание*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col
                                +select('', ['Нет', 'Да'])

    .lkCollapse(data-collapse-wrapper="")
        .lkCollapse__title(data-collapse="") Общие настройки модуля
        .lkCollapse__body(data-collapse-body="")
            .form
                .form__row.form__row_inline
                    .form__label Доступность*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col.col_50
                                +select('Отображать на странице курса', ['Нет', 'Да'])
                .form__row.form__row_inline
                    .form__label Идентификатор (ID)*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col.col_50
                                input(type="text", placeholder="Введите идентификатор")
                .form__row
                    .form__row_inline
                        .form__label Групповой режим*
                            .icon_help(title="Системная подсказка")

                        .form__field
                            .grid
                                .col.col_50
                                    +select('Нет групп', ['Нет', 'Да'])

    .lkCollapse(data-collapse-wrapper="")
        .lkCollapse__title(data-collapse="") Ограничение доступа
        .lkCollapse__body(data-collapse-body="")
            .form
                .form__row.form__row_inline
                    .form__label Ограничение доступа*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col.col_50
                                input(type="text", placeholder="Пусто")
                            .col.col_50
                                button.btn.btn_primary.btn_md Добавить ограничения

    .lkCollapse(data-collapse-wrapper="")
        .lkCollapse__title(data-collapse="") Выполнение элементов курса
        .lkCollapse__body(data-collapse-body="")
            .form
                .form__row.form__row_inline
                    .form__label Отслеживание выполнения*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        +select('Студенты могут вручную отмечать элемент курса как выполненный')

                .form__row.form__row_inline
                    .form__label Планируется выполнение до*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .form__date
                            .form__day
                                +select('', [14, 15, 16, 17], true)
                            .form__month
                                +select('', ['Сентября', 'Октября', 'Ноября'], true)
                            .form__year
                                +select('', [2021, 2022, 2023], true)
                            .form__time
                                +select('', ['15:00', '15:30', '16:00', '16:30'], true)
                            i.icon_calendar
                            .form__check
                                input(type="checkbox")
                                .form__checkText Включить

    .lkCollapse(data-collapse-wrapper="")
        .lkCollapse__title(data-collapse="") Теги
        .lkCollapse__body(data-collapse-body="")
            .form
                .form__row.form__row_inline
                    .form__label Теги
                        .icon_help(title="Системная подсказка")

                    .form__field
                        input(type="text", placeholder="Введите теги")

                .form__row.form__row_inline
                    .form__label Управление стандартными тегами*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col
                                +select('', ['Нет', 'Да'])

    .lkCollapse(data-collapse-wrapper="")
        .lkCollapse__title(data-collapse="") Компетенции
        .lkCollapse__body(data-collapse-body="")
            .form
                .form__row.form__row_inline
                    .form__label Компетенции курса*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col.col_50
                                +select('Не выбрано')

                .form__row.form__row_inline
                    .form__label По завершению элемента*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col.col_50
                                +select('Ничего не делать')

    .lkCollapse__info * - обязательно

    .lkCollapse__foot
        button.btn.btn_primary Сохранить
        button.btn.btn_link ОТМЕНА

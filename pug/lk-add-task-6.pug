        .lkCollapse__body(data-collapse-body="")
            .form
                .form__row.form__row_inline
                    .form__label Доступность*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col.col_50
                                +select('Отображать на странице курса', ['Нет', 'Да'])
                .form__row.form__row_inline

extends layout/lk.pug

block variables
    - lkPage = '';
    - isLogin = true;
    - isCourse = false;
    - asideHide = true;
    - navHide = true;

block lkcontent
    .lkContent__title Добавление задания: Тест

    .lkCoursTask__title Добавление задания: Тест

    .lkCollapse(data-collapse-wrapper="")
        .lkCollapse__title.open(data-collapse="") Общее
        // Добавить класс open для открытого состояния
        .lkCollapse__body.open(data-collapse-body="")
            .form
                .form__row
                    .form__label Название задания*
                        .icon_help(title="Системная подсказка")
                    .form__field
                        input(type="text", placeholder="Введите полное название заголовка блока")
                .form__row
                    .form__label Вступление*
                        .icon_help(title="Системная подсказка")
                    .form__field
                        textarea(placeholder="Введите текст")
                .form__row
                    .form__check
                        input(type="checkbox")
                        .form__checkText Отображать описание/вступление на странице курса
                .form__row
                    .form__label Дополнительные файлы*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        +upload()

    .lkCollapse(data-collapse-wrapper="")
        .lkCollapse__title.open(data-collapse="") Синхронизация
        .lkCollapse__body.open(data-collapse-body="")
            .form
                .form__row.form__row_inline
                    .form__label Начало тестирования*
                        .icon_help(title="Системная подсказка")
                    .form__field
                        .form__date
                            .form__day
                                +select('', [14, 15, 16, 17], true)
                            .form__month
                                +select('', ['Сентября', 'Октября', 'Ноября'], true)
                            .form__year
                                +select('', [2021, 2022, 2023], true)
                            .form__time
                                +select('', ['15:00', '15:30', '16:00', '16:30'], true)
                            i.icon_calendar
                            .form__check
                                input(type="checkbox")
                                .form__checkText Включить

                .form__row.form__row_inline
                    .form__label Окончание тестирования*
                        .icon_help(title="Системная подсказка")
                    .form__field
                        .form__date
                            .form__day
                                +select('', [14, 15, 16, 17], true)
                            .form__month
                                +select('', ['Сентября', 'Октября', 'Ноября'], true)
                            .form__year
                                +select('', [2021, 2022, 2023], true)
                            .form__time
                                +select('', ['15:00', '15:30', '16:00', '16:30'], true)
                            i.icon_calendar
                            .form__check
                                input(type="checkbox")
                                .form__checkText Включить

                .form__row.form__row_inline
                    .form__label Ограничение по времени
                        .icon_help(title="Системная подсказка")
                    .form__field
                        .form__date
                            .form__time
                                +select('00', [0, 1, 2, 3], true)
                            .form__time
                                +select('Минут', ['Часов', "Минут", "Секкунд"], true)
                            .form__check
                                input(type="checkbox")
                                .form__checkText Включить

                .form__row.form__row_inline
                    .form__label По истечении времени*
                        .icon_help(title="Системная подсказка")
                    .form__field
                        +select('Открытые попытки отправляются автоматически')

    .lkCollapse(data-collapse-wrapper="")
        .lkCollapse__title.open(data-collapse="") Оценка
        .lkCollapse__body.open(data-collapse-body="")
            .form
                .form__row.form__row_inline
                    .form__label Категория оценки*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid
                            .col.col_50
                                +select('Без категории')

                .form__row.form__row_inline
                    .form__label Проходной балл*
                        .icon_help(title="Системная подсказка")

                    .form__field
                        .grid

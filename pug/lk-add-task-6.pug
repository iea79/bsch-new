        .lkCollapse__body.open(data-collapse-body="")
            .form
                .grid
                    .col.col_33
                        .form__label Во время попытки
                        .form__list
                            .form__row.form__row_inline
                                +checkbox('Попытка', true, true)
                            .form__row.form__row_inline
                                +checkbox('Правилен ли ответ', true, true)
                            .form__row.form__row_inline
                                +checkbox('Баллы', true, true)
                            .form__row.form__row_inline
                                +checkbox('Отзыв на ответ', true, true)
                            .form__row.form__row_inline
                                +checkbox('Общий отзыв к вопросу', true, true)
                            .form__row.form__row_inline
                                +checkbox('Правильный ответ', true, true)
                            .form__row.form__row_inline
                                +checkbox('Итоговый отзыв к тесту', true, false)

                    .col.col_33
                        .form__label Сразу после попытки
                        .form__list
                            .form__row.form__row_inline
                                +checkbox('Попытка', false, true)
                            .form__row.form__row_inline
                                +checkbox('Правилен ли ответ', false, true)
                            .form__row.form__row_inline
                                +checkbox('Баллы', false, true)
                            .form__row.form__row_inline
                                +checkbox('Отзыв на ответ', false, true)
                            .form__row.form__row_inline
                                +checkbox('Общий отзыв к вопросу', false, true)
                            .form__row.form__row_inline
                                +checkbox('Правильный ответ', false, true)
                            .form__row.form__row_inline
                                +checkbox('Итоговый отзыв к тесту', false, true)

                    .col.col_33
                        .form__label Позже, но только пока тест открыт
                        .form__list
                            .form__row.form__row_inline
                                +checkbox('Попытка', false, true)
                            .form__row.form__row_inline
                                +checkbox('Правилен ли ответ', false, true)
                            .form__row.form__row_inline
                                +checkbox('Баллы', false, true)
                            .form__row.form__row_inline
                                +checkbox('Отзыв на ответ', false, true)
                            .form__row.form__row_inline
                                +checkbox('Общий отзыв к вопросу', false, true)
                            .form__row.form__row_inline
                                +checkbox('Правильный ответ', false, true)
                            .form__row.form__row_inline
                                +checkbox('Итоговый отзыв к тесту', false, true)

                    .col.col_33
                        .form__label После того, как тест будет закрыт
                        .form__list
                            .form__row.form__row_inline
                                +checkbox('Попытка', false, true)
                            .form__row.form__row_inline
                                +checkbox('Правилен ли ответ', false, true)
                            .form__row.form__row_inline
                                +checkbox('Баллы', false, true)
                            .form__row.form__row_inline
                                +checkbox('Отзыв на ответ', false, true)
                            .form__row.form__row_inline
                                +checkbox('Общий отзыв к вопросу', false, true)
                            .form__row.form__row_inline
                                +checkbox('Правильный ответ', false, true)
                            .form__row.form__row_inline
                                +checkbox('Итоговый отзыв к тесту', false, true)

    .lkCollapse(data-collapse-wrapper="")
        .lkCollapse__title.open(data-collapse="") Внешний вид
        .lkCollapse__body.open(data-collapse-body="")
            .form
                .form__row.form__row_inline
                    .form__label Показать фотографию пользователя*
